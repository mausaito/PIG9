                function drawChart() {
                    const container = document.querySelector('#chart')
                    const data = new google.visualization.arrayToDataTable([
                        ['Tempo', 'Valor'],
                        ['2 anos', 50000],
                        ['4 anos', 150000],
                        ['6 anos', 300000],
                        ['8 anos', 600000],
                        ['10 anos', 1000000]
                    ])
                    const options = {
                        title: 'TEMPO X VALOR',
                        height: 500,
                        width: 1500,
                    }
                    const chart = new google.visualization.LineChart(container)
                    chart.draw(data, options)
                }
